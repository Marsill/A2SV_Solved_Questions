class Solution:
    def wordPattern(self, pattern: str, s: str) -> bool:
        word = {}
        s = s.split()
        
        if len(s) != len(pattern):
            return False

        for i in range(len(pattern)):
            if pattern[i] not in word:
                if s[i] in word.values():
                    return False               
                word[pattern[i]] = s[i]
            else:
                if word[pattern[i]] != s[i]:
                    return False
            
        return True
